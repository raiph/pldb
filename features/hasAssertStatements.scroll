codeWithHeader Example from <a href="../concepts/c.html">C</a>:
 #include &lt;assert.h&gt;
 int i, a[10];
 for (i = 0; i &lt; 10; ++i)
   {
   assert(0 &lt;= i &amp;&amp; i &lt; 10);
   a[i] = 10-i;
   }
 for (i = 0; i &lt; 10; ++i)
   {
   assert(0 &lt;= i &amp;&amp; i &lt; 10);
   assert(0 &lt;= a[i] &amp;&amp; a[i] &lt; 10);
   a[a[i]] = a[i];
   }

codeWithHeader Example from <a href="../concepts/c3.html">C3</a>:
 assert(a &gt; 0, &quot;Expected a positive number&quot;);
 $assert(Foo.sizeof == 8, &quot;Foo sizecheck at compile time failed&quot;);

codeWithHeader Example from <a href="../concepts/jule.html">Jule</a>:
 use std::debug
 use std::debug::assert::{assert}
 
 fn main() {
     std::debug::ENABLE = true
     let x = 200
     assert(x &lt; 200)
 }

codeWithHeader Example from <a href="../concepts/speedie.html">Speedie</a>:
 class Person
  |int| age
  setter age
   // &quot;expect&quot; will actually add an Error to a list of errors
   expect (value &gt;= 0) (&quot;bad age $value set!&quot;)
   .age = value
 
 main
  || p = person()
  p.age = -10
  if !stderr.ok
   &quot;Oof we got some errors&quot;

